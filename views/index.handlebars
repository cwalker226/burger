<h1>List of burgers</h1>
{{#each burgers}}
    {{#unless devoured}}
        <p>{{burger_name}}</p>
        <button data-burgerid="{{id}}" class="devour_btn">Devour!</button>
    {{/unless}}
{{/each}}

<h2>Devoured Burgers</h2>
{{#each burgers}}
    {{#if devoured}}
        <p>{{burger_name}}</p>
    {{/if}}
{{/each}}

<h2>Add a burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
</form>